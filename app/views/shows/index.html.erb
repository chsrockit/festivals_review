<h1>Listing shows</h1>

<table>
  <tr>
    <th>Festival</th>
    <th>Venue</th>
    <th>Name</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Score</th>
  </tr>

<% @shows.each do |show| %>
  <tr>
    <td><%=h show.festival_id %></td>
    <td><%=h show.venue_id %></td>
    <td><%=h show.name %></td>
    <td><%=h show.start_date %></td>
    <td><%=h show.end_date %></td>
    <td><%=h show.score %></td>
    <td><%= link_to 'Show', show %></td>
    <td><%= link_to 'Edit', edit_show_path(show) %></td>
    <td><%= link_to 'Destroy', show, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New show', new_show_path %>