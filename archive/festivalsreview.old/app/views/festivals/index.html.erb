<h1>Listing festivals</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Startdate</th>
    <th>Enddate</th>
  </tr>

<% @festivals.each do |festival| %>
  <tr>
    <td><%=h festival.name %></td>
    <td><%=h festival.startdate.strftime("%A, %b %d, %Y ") %> | </td>
    <td><%=h festival.enddate.strftime("%A, %b %d, %Y") %></td>
    <td><%= link_to 'Show', festival %></td>
    <td><%= link_to 'Edit', edit_festival_path(festival) %></td>
    <td><%= link_to 'Destroy', festival, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New festival', new_festival_path %>
