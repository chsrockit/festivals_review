<h1>New show</h1>

<% form_for(@show) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :venue_id %><br />
    <%= collection_select(:event, :venue_id, Venue.find(:all), :id, :name, {:prompt => true}) %>
  </p>
  <p>
    <%= f.label :festival_id %><br />
    <%= collection_select(:event, :festival_id, Festival.find(:all), :id, :name, {:prompt => true}) %>
  </p>
  <p>
    <%= f.label :startdate %><br />
    <%= f.datetime_select :startdate %>
  </p>
  <p>
    <%= f.label :enddate %><br />
    <%= f.datetime_select :enddate %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', shows_path %>