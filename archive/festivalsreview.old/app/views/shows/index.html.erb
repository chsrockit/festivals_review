<h1>Listing shows</h1>

<table>
  <tr>
    <th>Name</th>
	<th>Venue</th>
	<th>Festival</th>
    <th>Start Date</th>
    <th>End Date</th>
  </tr>

<% @shows.each do |show| %>
  <tr>
    <td><%=h show.name %></td>
    <td><%=h Venue.find(show.venue_id).name %></td>
    <td><%=h Festival.find(show.festival_id).name %></td>
    <td><%=h show.startdate %></td>
    <td><%=h show.enddate %></td>
    <td><%= link_to 'Show', show %></td>
    <td><%= link_to 'Edit', edit_show_path(show) %></td>
    <td><%= link_to 'Destroy', show, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New show', new_show_path %>

